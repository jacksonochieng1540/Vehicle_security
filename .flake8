[flake8]
# Exclude these directories from linting
exclude =
    .git,
    __pycache__,
    */migrations/*,
    venv,          # ← YOUR VIRTUAL ENVIRONMENT
    env,           # ← ALTERNATIVE VENV NAME
    .venv,         # ← ANOTHER ALTERNATIVE
    staticfiles,
    media,
    node_modules

max-line-length = 100
max-complexity = 10

# Ignore some common style issues
ignore =
    E203,  # Whitespace before ':'
    E501,  # Line too long
    W503   # Line break before binary operator